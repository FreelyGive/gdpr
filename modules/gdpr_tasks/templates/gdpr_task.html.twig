{#
/**
 * @file gdpr_task.html.twig
 * Default theme implementation to present Task data.
 *
 * This template is used when viewing Task pages.
 *
 *
 * Available variables:
 * - content: A list of content items. Use 'content' to print all content, or
 * - attributes: HTML attributes for the container element.
 *
 * @see template_preprocess_gdpr_task()
 *
 * @ingroup themeable
 */
#}

{% if content %}
  {# @todo Fix the seven details classes in a better way. #}
  <details data-drupal-selector="task-summary" id="task-summary" open="open" class="seven-details">
    <summary role="button" aria-controls="task-summary" aria-expanded="true" aria-pressed="true" class="seven-details__summary">Task Summary</summary>
    <div class="details-wrapper seven-details__wrapper">
      <div{{ attributes.addClass('gdpr_task') }}>
        <strong>Type: </strong> {{ type }}
        {{- content -}}
      </div>
    </div>
  </details>
{% endif %}

{% if data %}
  <details data-drupal-selector="task-data" id="task-data" open="open" class="seven-details">
    <summary role="button" aria-controls="task-data" aria-expanded="true" aria-pressed="true" class="seven-details__summary">Data</summary>
    <div class="details-wrapper seven-details__wrapper">
      <div{{ attributes.addClass('gdpr_task') }}>
        {{ data }}
      </div>
    </div>
  </details>
{% endif %}

{% if actions %}
  {{ actions }}
{% endif %}
